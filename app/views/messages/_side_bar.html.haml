.SideBar
  .user-name
    .user-name__list
      %h1.user-name__Name
        = current_user.name
      %ul.user-name__iconList
        %li.user-name__Icon
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.user-name__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .GroupList
    - current_user.groups.each do |group|
      .Group-name
        = link_to group_messages_path(group) do
          .Group-name__name
            = group.name
          .Group-name__message
            = group.show_last_message