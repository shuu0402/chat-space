.Chat
  .group-info
    .group-info__group
      .group-info__Name
        = @group.name
      %ul.group-info__member-list
        Memberï¼š
        %li.group-info__member
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group),class: "group-info__edit" do
      Edit
       


  .Field
    = render @messages

  .footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .Form__contents
        = f.text_field :content, class: 'Form__content', placeholder: 'type a message'
        = f.label :image, class: 'Form__image' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'
